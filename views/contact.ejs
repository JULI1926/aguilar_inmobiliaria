<!doctype html>
<html lang="es">

<%- include('partials/header', { pageTitle: 'Contacto' }) %>
<%- include('partials/schema') %>

<body>

    <%- include('partials/navbar') %>

    <div class="hero page-inner overlay" style="background-color: var(--bs-primary)">

        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-lg-9 text-center mt-5">
                    <h1 class="heading" data-aos="fade-up">Contáctanos</h1>

                    <nav aria-label="breadcrumb" data-aos="fade-up" data-aos-delay="200">
                        <ol class="breadcrumb text-center justify-content-center">
                            <li class="breadcrumb-item "><a href="/">Home</a></li>
                            <li class="breadcrumb-item active text-white-50" aria-current="page">Contact</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
                    <div class="contact-info">

                        <div class="address mt-2">
                            <i class="icon-room"></i>
                            <h4 class="mb-2">Ubicación:</h4>
                            <p>Manizales Caldas,<br> La Florida</p>
                        </div>

                        <div class="open-hours mt-4">
                            <i class="icon-clock-o"></i>
                            <h4 class="mb-2">Horario:</h4>
                            <p>
                                Sunday-Friday:<br>
                                11:00 AM - 2300 PM
                            </p>
                        </div>

                        <div class="email mt-4">
                            <i class="icon-envelope"></i>
                            <h4 class="mb-2">Email:</h4>
                            <p>aguilarinmobiliarios@gmail.com</p>
                        </div>

                        <div class="phone mt-4">
                            <i class="icon-phone"></i>
                            <h4 class="mb-2">Teléfono:</h4>
                            <p>3016361705</p>
                        </div>

                    </div>
                </div>
                <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
                    <form action="/contact" method="POST">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <input type="text" name="name" class="form-control" placeholder="Escriba su nombre">
                            </div>
                            <div class="col-6 mb-3">
                                <input type="email" name="email" class="form-control" placeholder="Escriba su correo">
                            </div>
                            <div class="col-12 mb-3">
                                <input type="text" name="subject" class="form-control" placeholder="Asunto (Motivo del contacto)">
                            </div>
                            <div class="col-12 mb-3">
                                <textarea name="message" id="" cols="30" rows="7" class="form-control"
                                    placeholder="Escriba su mensaje"></textarea>
                            </div>

                            <div class="col-12">
                                <input type="submit" value="Enivar Mensaje" class="btn btn-primary">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- /.untree_co-section -->

    <%- include('partials/footer') %>

    <!-- Preloader -->
    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>



    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/tiny-slider.js"></script>
    <script src="/assets/js/aos.js"></script>
    <script src="/assets/js/navbar.js"></script>
    <script src="/assets/js/counter.js"></script>
    <script src="/assets/js/custom.js"></script>
</body>

</html>